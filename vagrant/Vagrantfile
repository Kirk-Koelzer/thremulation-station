Vagrant.configure("2") do |config|

  config.vm.define "elastic" do |cfg|
    cfg.vm.box = "centos/7"
    cfg.vm.hostname = "elk"
    cfg.disksize.size = "256GB"
    cfg.vm.network "private_network", ip: "192.168.33.10", auto_config: true
    cfg.vm.network "forwarded_port", guest: 5601, host: 5601
    cfg.vm.network "forwarded_port", guest: 9200, host: 9200
    cfg.vm.network "forwarded_port", guest: 8487, host: 8487
    cfg.vm.provision "shell", path: "./scripts/install-elastic.sh"
    cfg.vm.provision "shell", path: "./scripts/install-atomicredteam.ps1"
    cfg.vm.provider :virtualbox do |vb|
      vb.name = "elastic"
      vb.memory = 4096
      vb.cpus = 2
      vb.customize ["modifyvm", :id, "--cableconnected1", "on"]
    end
  end

  config.vm.define "windows10" do |cfg|
    cfg.vm.box = "seven62/windows10"
    cfg.vm.hostname = "win10"
    cfg.vm.network "private_network", ip: "192.168.33.11", auto_config: true
    cfg.vm.provision "shell", path: "./scripts/install-winlogbeat.ps1"
    cfg.vm.provision "shell", path: "./scripts/install-sysmon.ps1"
    cfg.vm.provision "shell", path: "./scripts/install-pwshssh.ps1"
    cfg.vm.provision "shell", path: "./scripts/install-advaudit.ps1"
    cfg.vm.provision "shell", path: "./scripts/disable-windef.ps1"
    cfg.vm.provider :virtualbox do |vb|
      vb.name = "windows10"
      vb.memory = 2048
      vb.cpus = 2
    end
  end
  
end
